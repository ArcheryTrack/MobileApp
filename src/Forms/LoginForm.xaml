<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ATMobile.Forms.LoginForm">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="20, 40, 20, 20" Android="20, 20, 20, 20" WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="50">
            <Label x:Name="lblHeader" Text="ArcheryTrack" FontAttributes="Bold" FontSize="40" FontFamily="sans-serif" />
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15">
                <Entry x:Name="txtUserName" Placeholder="Username" Keyboard="Email"  />
                <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="true" Keyboard="Default" />
                <Button x:Name="btnLogin" Text="Login" IsEnabled="true" Clicked="OnLogin" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>